<div class="hidden result-tabs" id="tabs">
  {#<div class="row hidden result-tabs">#}
    <h3>Search results:</h3>

    <span id="resultsCount">No</span> results out of <span id="totalDocsCount"></span> documents for <span id="humanQuery">all search terms.</span>
  {#</div><!-- row -->#}
  {#<div class="row hidden result-tabs">#}
    <div class="col-sm-3">
      <ul class="nav nav-pills nav-stacked" role="tablist">
        <li role="presentation" class="active">
          <a href="#tab-documents" role="tab" data-toggle="tab">Documents</a>
        </li>
        <li role="presentation">
          <a href="#tab-timeline" role="tab" data-toggle="tab">Timeline</a>
        </li>
        <li role="presentation">
          <a href="#tab-geographic" role="tab" data-toggle="tab">Geography</a>
        </li>
        <li role="presentation">
          <a href="#tab-charts" role="tab" data-toggle="tab">Word Charts</a></li>
      </ul>
    </div><!-- col -->
    <div class="col-sm-9">
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="tab-documents" >
          <div class="search-results-sort">
            <form id="sortForm">
              <label class="radio-inline">
                <input type='radio' name='sort' id='sort_similarity' value='similarity'> Relevance
              </label>
              <label class="radio-inline">
                <input type='radio' name='sort' id='sort_date' value='date'> Date
              </label>
              <label class="radio-inline">
                <input type='radio' name='sort' id='sort_sentiment' value='sentiment'> Sentiment
                </label>
            </form>
          </div><!-- search-results-sort -->
          <ol id="documentsList">Loading...</ol>

          <nav>
            <ul class="pagination hidden">
              <li>Prev</li>
              <li>Page #n</li>
              <li>Page #n</li>
              <li>Page #c</li>
              <li>Page #n</li>
              <li>Page #n</li>
              <li>Next</li>
            </ul>
          </nav>

        </div><!-- tab-documents -->

        <div role="tabpanel" class="tab-pane" id="tab-timeline">
          <!-- Timeline Tab Content -->
          <p>View your search results distributed over time and with varying sentiment.</p>
          <div id="timeChart" style="width:100%; height:500px;"></div>
        </div><!-- tab-timeline -->

        <div role="tabpanel" class="tab-pane" id="tab-geographic">
          <!-- Geographic Tab Content -->
          <div id="map" style="width:100%; height:500px;"></div>
        </div><!-- tab-timeline -->
        <div role="tabpanel" class="tab-pane" id="tab-charts">
          <!-- Charts Tab Content -->
          <div id="personChart">
            <h2>People</h2>
          </div>

          <div id="placeChart">
            <h2>Places</h2>
          </div>
        </div><!-- tab-charts -->
      </div><!-- tab-content -->
    </div><!-- col -->
  {#</div><!-- row -->#}
</div>